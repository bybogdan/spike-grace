---
import { AstroFont } from 'astro-font'
import Header from '../sections/Header.astro'
import Hero from '../sections/Hero.astro'
import Mission from '../sections/Mission.astro'
import Product from '../sections/Product.astro'
import Contact from '../sections/Contact.astro'
import Footer from '../sections/Footer.astro'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
    <AstroFont
      config={[
        {
          name: 'InriaSans',
          src: [
            {
              style: 'normal',
              weight: '400',
              path: './public/fonts/InriaSans-Light.ttf',
            },
            {
              style: 'bold',
              weight: '700',
              path: './public/fonts/InriaSans-Bold.ttf',
            },
          ],
          preload: true,
          display: 'swap',
          selector: 'body',
          fallback: 'sans-serif',
        },
        {
          name: 'Inter',
          src: [
            {
              style: 'normal',
              weight: '400',
              path: './public/fonts/Inter-VariableFont_slnt,wght.ttf',
            },
            {
              style: 'bold',
              weight: '700',
              path: './public/fonts/Inter-VariableFont_slnt,wght.ttf',
            },
          ],
          preload: true,
          display: 'swap',
          selector: 'body',
          fallback: 'sans-serif',
        },
      ]}
    />
  </head>
  <body>
    <div class="container">
      <Header />
      <Hero />
      <Mission />
      <Product />
      <div class="dividerContainer">
        <div class="divider"></div>
      </div>
      <Contact />
    </div>
    <Footer />

    <style>
      .container {
        margin: 0 auto;
        padding: 0 20px;
        display: flex;
        flex-direction: column;
        gap: 7rem;

        max-width: 1290px;
      }

      .dividerContainer {
        position: relative;
        height: 6px;
      }
      .divider {
        z-index: 9999;
        position: absolute;
        left: -1000%;
        width: calc(100% * 100);
        height: 6px;
        background: linear-gradient(
          90deg,
          rgba(90, 139, 54, 0.1) 0%,
          rgba(199, 223, 26, 0.1) 47.5%,
          rgba(178, 195, 94, 0.1) 92%
        );
      }
    </style>
    <style is:global>
      html {
        scroll-behavior: smooth;
      }

      body {
        margin: 0;
        padding: 0;
        font-family: 'Inter', sans-serif;
        font-weight: 400;
        font-size: 18px;
        line-height: 1.2;
        overscroll-behavior: none;
        color: black;
        overflow-x: hidden;
      }

      img {
        object-fit: cover;
        border-radius: 30px;
      }

      ul,
      li {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      a {
        text-decoration: none;
        color: inherit;
      }

      * {
        box-sizing: border-box;
      }

      h1,
      h2,
      h3 {
        margin: 0;
      }

      h1 {
        font-family: 'InriaSans', sans-serif;
        font-weight: 700;
        font-size: 62px;
        line-height: 1.2;
      }
      h2 {
        font-family: 'InriaSans', sans-serif;
        font-weight: 700;
        font-size: 58px;
        line-height: 1.2;
      }

      h3 {
        font-family: 'Inter', sans-serif;
        font-weight: 600;
        font-size: 24px;
      }

      span,
      p {
        margin: 0;
        font-family: 'Inter', sans-serif;
        font-weight: 400;
        font-size: 20px;
        line-height: 1.2;
      }

      @media (max-width: 1334px) {
        h1 {
          font-size: 48px;
        }
        h2 {
          font-size: 42px;
        }
        h3 {
          font-size: 20px;
        }

        img {
          width: 50%;
        }
      }

      @media (max-width: 1140px) {
        img {
          width: 100%;
        }
      }

      @media (max-width: 768px) {
        h1 {
          font-size: 36px;
        }
        h2 {
          font-size: 32px;
        }
        h3 {
          font-size: 18px;
        }

        .container {
          gap: 4rem !important;
        }
      }
    </style>
  </body>
</html>
