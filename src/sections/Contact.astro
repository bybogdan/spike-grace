---
import { Image } from 'astro:assets'
import image from '../images/contactImage.jpg'
---

<section id="contact">
  <form>
    <h2>Contact Us</h2>
    <input type="text" placeholder="Name" />
    <input type="email" placeholder="Email" />
    <textarea rows="8" placeholder="Message"></textarea>
    <button type="submit">SUBMIT</button>
  </form>
  <Image class="image" src={image} alt="Contact" />
</section>

<style>
  section {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  h2 {
    margin-bottom: 1rem;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 1.6rem;
    width: 100%;
    max-width: 36%;
  }

  input,
  textarea {
    background-color: #efedec;
    border-radius: 30px;
    padding: 1.6rem 2rem;
    font-family: inherit;
    font-size: 20px;
    border: none;
  }

  textarea {
    resize: none;
  }

  button {
    background-color: #000000;
    color: #fff;
    border-radius: 30px;
    padding: 1rem 4rem;
    width: fit-content;
    font-size: 22px;
  }

  .image {
    border-radius: 30px;

    height: auto;
  }

  @media (max-width: 1140px) {
    section {
      flex-direction: column-reverse;
      gap: 2rem;
    }

    form {
      max-width: 70%;
    }

    img {
      width: 100%;
    }
  }

  @media (max-width: 768px) {
    form {
      max-width: 100%;
    }
  }
</style>
